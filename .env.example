# Igbo Archives Platform - Environment Variables
# Copy this file to .env and fill in your values

# ====================
# Core Django Settings
# ====================
SECRET_KEY=your-secure-secret-key-here
DEBUG=False
ALLOWED_HOSTS=igboarchives.com.ng,www.igboarchives.com.ng
CSRF_TRUSTED_ORIGINS=https://igboarchives.com.ng,https://www.igboarchives.com.ng
SITE_URL=https://igboarchives.com.ng

# ====================
# Email (Brevo/Sendinblue)
# ====================
BREVO_EMAIL_USER=your-brevo-email@example.com
BREVO_SMTP_KEY=your-brevo-smtp-key
DEFAULT_FROM_EMAIL=noreply@igboarchives.com.ng
ADMIN_EMAIL=admin@igboarchives.com.ng

# ====================
# Cloudflare R2 Storage
# ====================
R2_ACCESS_KEY_ID=your-r2-access-key
R2_SECRET_ACCESS_KEY=your-r2-secret-key
R2_BUCKET_NAME=igboarchives-media
R2_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
R2_CUSTOM_DOMAIN=media.igboarchives.com.ng

# ====================
# Cloudflare Turnstile (Bot Protection)
# ====================
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# ====================
# Google OAuth
# ====================
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# ====================
# AI Services
# ====================
# Groq API (Kimi K2, Llama-4 Scout, Qwen3)
GROQ_API_KEY=your-groq-api-key
GROQ_API_KEYS=key1,key2,key3

# Google Gemini (Vision, Chat fallback)
GEMINI_API_KEY=your-gemini-api-key
GEMINI_API_KEYS=key1,key2,key3

# YarnGPT (Igbo TTS)
YARNGPT_API_KEY=your-yarngpt-api-key

# ====================
# Push Notifications (VAPID)
# ====================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key

# ====================
# Analytics & Monetization
# ====================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_ADSENSE_CLIENT_ID=ca-pub-xxxxxxxxxxxxxxxx

# Paystack (Donations)
PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxx

# ====================
# SEO
# ====================
INDEXNOW_API_KEY=your-indexnow-api-key
